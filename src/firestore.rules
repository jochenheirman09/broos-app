
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isCreatingOwnData(userId) {
        return isOwner(userId) && request.resource.data.uid == userId;
    }
    
    function getUserData(userId) {
      let targetUserId = userId != null ? userId : request.auth.uid;
      return get(/databases/$(database)/documents/users/$(targetUserId)).data;
    }

    function isResponsible(clubId) {
        let userData = getUserData(null);
        return userData.role == 'responsible' && userData.clubId == clubId;
    }
    
    function isStaff() {
       return getUserData(null).role == 'staff';
    }

    function isStaffOfTeam(clubId, teamId) {
        let userData = getUserData(null);
        return userData.role == 'staff' && userData.clubId == clubId && userData.teamId == teamId;
    }
    
    function getMyTeamId() {
       return getUserData(null).teamId;
    }
    
    function getMyClubId() {
        return getUserData(null).clubId;
    }

    // --- NEW: Rules for Peer-to-Peer Chat ---
    match /p2p_chats/{chatId} {
        // A user can only access a chat document if their UID is in the `participants` array.
        allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;

        match /messages/{messageId} {
             // Messages can only be read or written by participants of the parent chat.
            allow read, write: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/p2p_chats/$(chatId)).data.participants;
        }
    }


    match /users/{userId} {
      allow get: if isSignedIn();
      allow create: if isCreatingOwnData(userId);
      allow update, delete: if isOwner(userId);

      allow list: if isSignedIn() && (
                    (isResponsible(request.query.where[0][2]) && request.query.where[0][0] == 'clubId') ||
                    (isStaff() && request.query.where[0][0] == 'teamId' && request.query.where[0][2] == getMyTeamId()) ||
                    (isSignedIn() && request.query.where.size() > 0 && request.query.where[0][0] == 'uid')
                  );

      match /wellnessScores/{scoreId} {
        allow read, write: if isSignedIn();
      }
      
      match /fcmTokens/{tokenId} {
        allow read, list: if false; 
        allow write: if isOwner(userId);
      }

      match /trainings/{trainingId} {
        allow read, write: if isSignedIn();
      }
      
      match /chats/{chatId} {
        allow read, write: if isSignedIn();
        
        match /messages/{messageId} {
          allow read, write: if isSignedIn();
        }
      }

      match /updates/{updateId} {
        allow read: if isOwner(userId);
        allow write: if false; 
      }
    }
    
    match /clubs/{clubId}/teams/{teamId}/alerts/{alertId} {
      allow create: if isOwner(request.resource.data.userId); // Player can create
      allow read, update, delete: if (isStaffOfTeam(clubId, teamId)) || (isResponsible(clubId));
    }
    
    // Collection Group for Alerts
    match /{path=**}/alerts/{alertId} {
        // A user can list alerts if they are a staff or responsible, AND
        // the query is filtered on the 'clubId' field.
        allow list: if (isStaff() && 'clubId' in request.query.where && request.query.where.clubId == getMyClubId()) || 
                    (isResponsible() && 'clubId' in request.query.where && request.query.where.clubId == getMyClubId());
    }


    match /clubs/{clubId} {
      allow get, list: if isSignedIn(); 
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /clubUpdates/{updateId} {
        allow read: if isResponsible(clubId);
        allow write: if false;
      }

      match /teams/{teamId} {
        allow read: if isSignedIn() && clubId == getUserData(null).clubId;
        allow list, create, update, delete: if isResponsible(clubId);

        match /summaries/{summaryId} {
            allow read: if isStaffOfTeam(clubId, teamId) || isResponsible(clubId);
            allow write: if false;
        }

        match /staffUpdates/{updateId} {
            allow read: if isStaffOfTeam(clubId, teamId) || isResponsible(clubId);
            allow write: if false;
        }
      }
    }

    match /knowledge_base/{docId} {
      allow read, list: if isResponsible(getUserData(null).clubId);
      allow write: if false; 
    }
  }
}

    