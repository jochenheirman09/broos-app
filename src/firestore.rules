
rules_version = '2';
service cloud.firestore {
  
  match /databases/{database}/documents {
    
    // --- HELPERS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    function hasRole(role) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isResponsible() {
      return hasRole('responsible');
    }

    function isStaff() {
      return hasRole('staff');
    }
    
    function isStaffOrResponsible() {
      return isStaff() || isResponsible();
    }
    
    function isTeamStaff(teamId) {
      return isStaff() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
    }
    
    function isClubMember(clubId) {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == clubId;
    }

    function isClubResponsible(clubId) {
      // Check if the user is a 'responsible' AND their clubId matches the one provided.
      // Also check if the clubId being checked is not null to prevent errors on incomplete user docs.
      return clubId != null && isResponsible() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == clubId;
    }

    function isSuperAdmin() {
      return request.auth.token.email != null && request.auth.token.email in ['jochen.heirman@gmail.com', 'nilsvanbever@gmail.com'];
    }

    // --- USER-SPECIFIC DATA ---
    match /users/{userId} {
      // NEW: Explicit broad read access for superadmins to all user data and subcollections.
      // This is the most reliable way to ensure admin dashboard queries succeed.
      match /{allPaths=**} {
        allow read: if isSuperAdmin();
      }
      
      allow list: if isSignedIn();
      allow get: if isSignedIn();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);

      // Player-specific subcollections
      match /fcmTokens/{tokenId} {
        allow read, write: if isOwner(userId);
      }
      match /updates/{updateId} {
        allow read: if isOwner(userId);
        allow write: if false; 
      }
      match /trainings/{trainingId} {
        allow read, write: if isOwner(userId);
      }
      match /games/{gameId} {
        allow read, write: if isOwner(userId);
      }
      match /chats/{chatId} {
        // A user can read/write their own chat sessions.
        // A 'responsible' can read the chat sessions of users within their own club for analytics.
        allow get, list: if isOwner(userId) || isClubResponsible(get(/databases/$(database)/documents/users/$(userId)).data.clubId);
        allow write: if isOwner(userId);
        match /messages/{messageId} {
          allow get, list: if isOwner(userId) || isClubResponsible(get(/databases/$(database)/documents/users/$(userId)).data.clubId);
          allow write: if isOwner(userId);
        }
      }
      match /wellnessScores/{scoreId} {
        allow read, write: if isOwner(userId);
      }
       match /myChats/{chatId} {
        allow read, write: if isOwner(userId);
      }
    }

    // --- CLUB & TEAM DATA ---
    match /clubs/{clubId} {
      allow list: if isSignedIn();
      allow get: if isClubMember(clubId);
      allow create: if isResponsible();
      allow update: if isResponsible() && isClubMember(clubId);
      
      // Give 'responsible' users read/list access to everything under their club.
      match /{allSubpaths=**} {
        allow list, get: if isResponsible() && isClubMember(clubId);
      }

      match /teams/{teamId} {
        allow get: if isClubMember(clubId);
        allow list: if isClubMember(clubId) && isStaffOrResponsible();
        allow create, delete: if isResponsible() && isClubMember(clubId);
        allow update: if (isResponsible() && isClubMember(clubId)) || (isClubMember(clubId) && isTeamStaff(teamId));

        // Specific rules for 'staff' remain in effect for individual document access.
        match /staffUpdates/{updateId} {
          allow get: if isClubMember(clubId) && hasRole('staff') && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
          allow write: if false;
        }
        
        match /alerts/{alertId} {
          allow get: if isClubMember(clubId) && hasRole('staff') && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
          allow write: if false;
        }

        match /summaries/{summaryId} {
          allow get: if isClubMember(clubId) && hasRole('staff') && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
          allow write: if false;
        }
      }

      match /clubUpdates/{updateId} {
        allow read: if isResponsible() && isClubMember(clubId);
        allow write: if false;
      }
    }
    
    // --- OTHER COLLECTIONS ---
    match /user_registrations/{userId} {
      allow create: if isOwner(userId);
    }
    
    match /p2p_chats/{chatId} {
      allow read, write: if isSignedIn() && resource.data.participants.hasAny([request.auth.uid]);
      match /messages/{messageId} {
         allow read, write: if isSignedIn() && get(/databases/$(database)/documents/p2p_chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }
    
    match /knowledge_base/{docId} {
      allow read: if isSignedIn();
      allow write: if isResponsible();
    }
    match /knowledge_stats/{statId} {
      allow read, write: if false; // Only backend can write
    }

    match /_locks/{lockName} {
      allow read, write: if isSignedIn();
    }


    // --- COLLECTION GROUP QUERIES ---
    match /{path=**}/alerts/{alertId} {
      allow list: if isSuperAdmin() || (isSignedIn() && (hasRole('responsible') || hasRole('staff')));
      allow get: if isSuperAdmin() || (isSignedIn() && (hasRole('responsible') || hasRole('staff')) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == resource.data.clubId);
    }

    match /{path=**}/staffUpdates/{updateId} {
      allow list: if isSuperAdmin() || (isSignedIn() && (hasRole('responsible') || hasRole('staff')));
      allow get: if isSuperAdmin() || (isSignedIn() && (hasRole('responsible') || hasRole('staff')) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == resource.data.clubId);
    }
  }
}
