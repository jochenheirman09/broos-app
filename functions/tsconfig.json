{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "target": "es2020",
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": [
    "src",
    "../src/actions/cron-actions.ts",
    "../src/ai/flows/**/*",
    "../src/services/firestore-service.ts",
    "../src/lib/types.ts",
    "../src/ai/types.ts",
    "../src/ai/genkit.ts",
    "../src/ai/retriever.ts"
  ],
  "exclude": [
    "node_modules",
    "../src/app",
    "../src/components"
  ]
}
