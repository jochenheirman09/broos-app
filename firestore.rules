rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Match ELK team document, ongeacht waar het staat
    match /clubs/{clubId}/teams/{teamId} {
       allow get: if isSignedIn(); // Dit lost de specifieke crash op
       allow list: if isSignedIn();
    }

    match /clubs/{clubId} {
      allow get, list: if isSignedIn();

      match /teams/{teamId} {
        // De rest van je bestaande rules...
        match /summaries/{summaryId} {
          allow read: if isSignedIn(); // Zet dit even op alleen isSignedIn() om te testen
          allow write: if false;
        }
      }
    }

    match /users/{userId} {
      allow get, list, write: if request.auth.uid == userId;
    }
  }
}
