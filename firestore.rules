
rules_version = '2';
service cloud.firestore {
  
  match /databases/{database}/documents {
    
    // --- HELPERS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
        return request.auth.uid == userId;
    }

    function hasRole(role) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function isResponsible() {
      return hasRole('responsible');
    }
    
    function isStaffOrResponsible() {
      return hasRole('staff') || isResponsible();
    }
    
    function isClubMember(clubId) {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == clubId;
    }

    // --- USER-SPECIFIC DATA ---
    match /users/{userId} {
      allow get: if isSignedIn();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);

      // Player-specific subcollections
      match /fcmTokens/{tokenId} {
        allow read, write: if isOwner(userId);
      }
      match /updates/{updateId} {
        allow read: if isOwner(userId);
        allow write: if false; 
      }
      match /trainings/{trainingId} {
        allow read, write: if isOwner(userId);
      }
      match /games/{gameId} {
        allow read, write: if isOwner(userId);
      }
      match /chats/{chatId} {
        allow read, write: if isOwner(userId);
        match /messages/{messageId} {
          allow read, write: if isOwner(userId);
        }
      }
      match /wellnessScores/{scoreId} {
        allow read, write: if isOwner(userId);
      }
       match /myChats/{chatId} {
        allow read, write: if isOwner(userId);
      }
    }

    // --- CLUB & TEAM DATA ---
    match /clubs/{clubId} {
      allow get: if isClubMember(clubId);
      allow create: if isResponsible();
      allow update: if isResponsible() && isClubMember(clubId);
      
      // Give 'responsible' users read/list access to everything under their club.
      // This solves the permission errors for listing alerts, summaries, and staff updates.
      match /{allSubpaths=**} {
        allow list, get: if isResponsible() && isClubMember(clubId);
      }

      match /teams/{teamId} {
        allow get: if isClubMember(clubId);
        allow list: if isClubMember(clubId) && isStaffOrResponsible();
        allow create, update, delete: if isResponsible() && isClubMember(clubId);

        // Specific rules for 'staff' remain in effect for individual document access.
        match /staffUpdates/{updateId} {
          allow get: if isClubMember(clubId) && hasRole('staff') && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
          allow write: if false;
        }
        
        match /alerts/{alertId} {
          // This rule is now primarily for direct GET requests by staff.
          // The collectionGroup query is handled by the rule below.
          allow get: if isClubMember(clubId) && hasRole('staff') && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
          allow write: if false;
        }

        match /summaries/{summaryId} {
          allow get: if isClubMember(clubId) && hasRole('staff') && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
          allow write: if false;
        }
      }

      match /clubUpdates/{updateId} {
        allow read: if isResponsible() && isClubMember(clubId);
        allow write: if false;
      }
    }
    
    // --- OTHER COLLECTIONS ---
    match /user_registrations/{userId} {
      allow create: if isOwner(userId);
    }
    
    match /p2p_chats/{chatId} {
      allow read, write: if isSignedIn() && resource.data.participants.hasAny([request.auth.uid]);
      match /messages/{messageId} {
         allow read, write: if isSignedIn() && get(/databases/$(database)/documents/p2p_chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
      }
    }
    
    match /knowledge_base/{docId} {
      allow read: if isSignedIn();
      allow write: if isResponsible();
    }
    match /knowledge_stats/{statId} {
      allow read, write: if false; // Only backend can write
    }

    // This collection is used to create distributed locks.
    // It should be writable by any signed-in user (as any function can attempt to acquire a lock),
    // but the transaction logic ensures only one can succeed at a time.
    match /_locks/{lockName} {
      allow read, write: if isSignedIn();
    }


    // --- COLLECTION GROUP QUERIES ---
    // This rule specifically handles the 'alerts' collectionGroup query from the client.
    match /{path=**}/alerts/{alertId} {
      allow list: if isSignedIn() && 
                   (hasRole('responsible') || hasRole('staff')) &&
                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == resource.data.clubId;
    }
  }
}

    