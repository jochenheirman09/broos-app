rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    // We halen de data uit Firestore ipv uit het token
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    match /clubs/{clubId} {
      // Sta GET toe voor iedereen die ingelogd is (veilig voor metadata)
      allow get: if isSignedIn();
      allow list: if isSignedIn();

      match /teams/{teamId} {
        // Belangrijk: Geen complexe checks voor de 'get' van een team
        allow get: if isSignedIn();
        allow list: if isSignedIn();

        match /summaries/{summaryId} {
          // Check de rol in de database document, niet in de claim
          allow read: if isSignedIn() && getUserData().clubId == clubId;
          allow write: if false;
        }
      }
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || getUserData().role == 'responsible');
      allow list: if isSignedIn();
      allow create, update: if request.auth.uid == userId;

      match /wellnessScores/{scoreId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      match /trainings/{trainingId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // --- ALERTS (Collection Group) ---
    match /{path=**}/alerts/{alertId} {
      allow read, list: if isSignedIn();
    }
  }
}
