rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    // 1. USER PROFILES - Blijft veilig
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Subcollecties vallen onder de catch-all hieronder
      match /{path=**} {
        allow read, list: if isSignedIn();
        allow write: if false;
      }
    }
    
    // 2. CATCH-ALL: OPEN VOOR ALLE INGELOGDE GEBRUIKERS
    // Dit is het tijdelijke noodplan. Alle paden die niet specifiek
    // hierboven zijn gedefinieerd (zoals /clubs, /knowledge_base, etc.)
    // vallen onder deze regel.
    match /{path=**} {
      allow read, list: if isSignedIn();
      allow write: if false;
    }
  }
}
