
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isCreatingOwnData(userId) {
        return isOwner(userId) && request.resource.data.uid == userId;
    }

    function isResponsible() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'responsible';
    }
    
    function isMemberOfClub(clubId) {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId == clubId;
    }

    function isStaff() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'staff';
    }
    
    function getMyTeamId() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId;
    }

    // Collection group query for alerts
    match /{path=**}/alerts/{alertId} {
      // Allow staff or responsible to read alerts if they are querying by userIds.
      // The client is responsible for fetching the correct userIds based on their role (team for staff, club for responsible).
      allow read: if (isStaff() || isResponsible()) && request.query.keys().hasAny(['where']) && request.query.where[0][0] == 'userId';
    }


    match /users/{userId} {
      // Allow a signed in user to get ANY user doc. This is required for helper functions.
      // The client UI should be responsible for only showing relevant data.
      allow get: if isSignedIn();
      allow create: if isCreatingOwnData(userId);
      allow update, delete: if isOwner(userId);

      // Listing users is allowed if filtered by clubId (for responsible) or teamId (for staff).
      allow list: if (isResponsible() && request.query.where[0][0] == 'clubId') ||
                   (isStaff() && request.query.where[0][0] == 'teamId') ||
                   (isSignedIn() && request.query.where[0][0] == 'uid');

      match /wellnessScores/{scoreId} {
        allow read, write: if isSignedIn();
      }
      
      match /fcmTokens/{tokenId} {
        allow read, list: if false; 
        allow write: if isOwner(userId);
      }

      match /trainings/{trainingId} {
        allow read, write: if isSignedIn();
      }
      
      match /chats/{chatId} {
        allow read, write: if isSignedIn();
        
        match /messages/{messageId} {
          allow read, write: if isSignedIn();
        }
      }

      match /alerts/{alertId} {
        allow create: if isOwner(userId);
        
        allow read, update, delete: if (isStaff() && get(/databases/$(database)/documents/users/$(userId)).data.teamId == getMyTeamId()) ||
                                      (isResponsible() && get(/databases/$(database)/documents/users/$(userId)).data.clubId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clubId);
      }

      match /updates/{updateId} {
        allow read: if isOwner(userId);
        allow write: if false; 
      }
    }

    match /clubs/{clubId} {
      allow get, list: if isSignedIn(); 
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /clubUpdates/{updateId} {
        allow read: if isSignedIn(); 
        allow write: if false;
      }

      match /teams/{teamId} {
        allow read: if isSignedIn();
        allow list, create, update, delete: if isResponsible() && isMemberOfClub(clubId);

        match /summaries/{summaryId} {
            allow read: if isSignedIn();
            allow write: if false;
        }

        match /staffUpdates/{updateId} {
            allow read: if isSignedIn();
            allow write: if false;
        }
      }
    }

    match /knowledge_base/{docId} {
      allow get, list: if isResponsible();
      allow write: if false; 
    }
  }
}
