rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isCreatingOwnData(userId) {
        return isOwner(userId) && request.resource.data.uid == userId;
    }

    function getMyProfile() {
      // Haalt het volledige document van de ingelogde gebruiker op.
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // Defensieve check om te zien of de aanvrager en de doelgebruiker
    // in hetzelfde team zitten.
    function isSameTeam() {
      let requesterDoc = getMyProfile();
      
      // 1. Controleer of het profiel van de aanvrager bestaat.
      if (!requesterDoc.exists) { 
        return false; 
      }
      
      // 2. Haal teamId's veilig op met .get() en een default waarde (null).
      let requesterTeamId = requesterDoc.data.get('teamId', null);
      let targetTeamId = resource.data.get('teamId', null);
      
      // 3. Verleen alleen toegang als beide teamId's bestaan en gelijk zijn.
      return requesterTeamId != null && targetTeamId != null 
             && requesterTeamId == targetTeamId;
    }

    function isResponsible() {
        let profile = getMyProfile();
        return profile.exists && profile.data.role == 'responsible';
    }
    
    function isStaff() {
       let profile = getMyProfile();
       return profile.exists && profile.data.role == 'staff';
    }
    
    function isMemberOfClub(clubId) {
        let profile = getMyProfile();
        return profile.exists && profile.data.clubId == clubId;
    }

    function isInChatWith(userId) {
      let sortedIds = [request.auth.uid, userId].sort();
      let chatId = sortedIds.join('_');
      let chatRef = /databases/$(database)/documents/p2p_chats/$(chatId);
      return exists(chatRef);
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      // READ is toegestaan als je eigenaar bent OF als je in hetzelfde team zit.
      allow get: if isSignedIn() && (
        isOwner(userId) 
        || isSameTeam()
        || isInChatWith(userId)
      );
      
      allow list: if false; 
      
      allow create: if isCreatingOwnData(userId);
      allow update: if isOwner(userId);
      allow delete: if false;

      // Subcollections for a user
      match /chats/{chatId} {
        allow read, write: if isOwner(userId);
        match /messages/{messageId} {
          allow read, write: if isOwner(userId);
        }
      }
      
      match /wellnessScores/{scoreId} {
         allow read, write: if isOwner(userId);
      }

      match /trainings/{trainingId} {
        allow read, write: if isOwner(userId);
      }
      
       match /fcmTokens/{tokenId} {
        allow read, list: if false; 
        allow write: if isOwner(userId);
      }
      
      match /updates/{updateId} {
        allow read: if isOwner(userId);
        allow write: if false; 
      }
    }
    
    match /p2p_chats/{chatId} {
      // Je mag alleen een chat lezen/updaten/maken als je een deelnemer bent.
      allow read, update: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      
      match /messages/{messageId} {
        // Gebruik 'get' om de parent te controleren. Dit is efficiÃ«nter dan 'exists'.
        allow read, list, create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/p2p_chats/$(chatId)).data.participants;
      }
    }

    match /clubs/{clubId} {
      // Iedereen mag clubdetails lezen (bv. om teamcodes te valideren)
      allow get: if isSignedIn();
      
      allow list, create, update, delete: if isResponsible() && isMemberOfClub(clubId);

      match /teams/{teamId} {
        allow read: if isResponsible() && isMemberOfClub(clubId);
        allow list, create, update, delete: if isResponsible() && isMemberOfClub(clubId);

        // Subcollections van teams, zoals alerts en updates
        match /{path=**} {
            // Sta lezen toe voor stafleden van hetzelfde team/club en beheerders. Schrijven wordt door server afgehandeld.
            allow read: if (isStaff() && getMyProfile().data.teamId == teamId) || (isResponsible() && isMemberOfClub(clubId));
            allow write: if false;
        }
      }
      
      match /clubUpdates/{updateId} {
        allow read: if isResponsible() && isMemberOfClub(clubId);
        allow write: if false;
      }
    }
    
    // Collection group query for alerts.
    match /{path=**}/alerts/{alertId} {
      allow read: if isStaff() || isResponsible();
    }
    
    match /knowledge_base/{docId} {
        allow read, list: if isResponsible();
        allow create, update, delete: if false; // Managed via server-side actions
    }
  }
}
