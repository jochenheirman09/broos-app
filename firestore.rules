
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isCreatingOwnData(userId) {
        return isOwner(userId) && request.resource.data.uid == userId;
    }
    
    function getUserData() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function getUserClubId() {
        return getUserData().clubId;
    }

    function isResponsible() {
        return getUserData().role == 'responsible';
    }

    function isStaff() {
       return getUserData().role == 'staff';
    }

    // --- COLLECTION GROUP RULES ---
    match /{path=**}/alerts/{alertId} {
      // Allow reading and listing if the user is signed in and the alert's clubId matches the user's clubId.
      allow read, list: if isSignedIn() && resource.data.clubId == getUserClubId();
    }


    // --- REGULAR COLLECTION RULES ---
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if (isResponsible() && request.query.where[0][0] == 'clubId') ||
                   (isStaff() && request.query.where[0][0] == 'teamId') ||
                   (isSignedIn() && request.query.where[0][0] == 'uid');
      
      allow create: if isCreatingOwnData(userId);
      allow update, delete: if isOwner(userId);

      match /wellnessScores/{scoreId} {
        allow read, write: if isOwner(userId);
      }
      
      match /fcmTokens/{tokenId} {
        allow read, list: if false; 
        allow write: if isOwner(userId);
      }
      
      match /trainings/{trainingId} {
        allow read, write: if isOwner(userId);
      }

      match /myChats/{chatId} {
          allow read, list: if isOwner(userId);
          allow write: if false;
      }
      
      match /chats/{chatId} {
        allow read, write: if isOwner(userId);
        
        match /messages/{messageId} {
          allow read, write: if isOwner(userId);
        }
      }

      match /updates/{updateId} {
        allow read: if isOwner(userId);
        allow write: if false; 
      }
    }

    match /user_registrations/{userId} {
        allow create: if isOwner(userId);
        allow read, update, delete: if false;
    }

    match /clubs/{clubId} {
      allow get, list: if isSignedIn(); 
      allow create: if isSignedIn();
      // Only the owner of a club can update or delete it.
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /clubUpdates/{updateId} {
        allow read: if isResponsible() && getUserClubId() == clubId;
        allow write: if false; 
      }

      match /teams/{teamId} {
        allow read: if isSignedIn();
        allow list, create, update, delete: if isResponsible() && getUserClubId() == clubId;

        match /summaries/{summaryId} {
            allow read: if (isResponsible() || isStaff()) && getUserClubId() == clubId;
            allow write: if false;
        }

        match /staffUpdates/{updateId} {
            allow read: if (isResponsible() || isStaff()) && getUserClubId() == clubId;
            allow write: if false; 
        }
      }
    }

    match /p2p_chats/{chatId} {
      allow read, write: if request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/p2p_chats/$(chatId)).data.participants;
      }
    }

    match /knowledge_base/{docId} {
        allow read, list, create, update, delete: if isResponsible();
    }

    match /knowledge_stats/{statId} {
      allow read: if isResponsible();
      allow write: if false; // Only backend can update stats
    }
  }
}
