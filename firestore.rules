rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    // 1. USER PROFILES
    match /users/{userId} {
      // Gebruikers mogen alleen hun eigen data lezen en schrijven.
      allow read, write: if request.auth.uid == userId;
    }

    // 2. TIJDELIJKE CATCH-ALL: OPEN VOOR ALLE INGELOGDE GEBRUIKERS
    // Dit is de set die de app functioneel maakte (behalve alerts).
    match /{path=**} {
      allow read, list: if isSignedIn(); 
      allow write: if false;
    }
  }
}
