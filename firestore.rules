
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isCreatingOwnData(userId) {
        return isOwner(userId) && request.resource.data.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isResponsible() {
        return getUserData().role == 'responsible';
    }
    
    function isStaff() {
       return getUserData().role == 'staff';
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow create: if isCreatingOwnData(userId);
      allow update, delete: if isOwner(userId);

      // LIST rule: Allows staff/responsible to list users but ONLY if filtered by teamId/clubId
      // This is secure because the user can only know their own team/club ID to query.
      allow list: if isSignedIn() && (
                    (request.query.where.size() > 0 && request.query.where[0][0] == 'clubId' && request.query.where[0][2] == getUserData().clubId && isResponsible()) ||
                    (request.query.where.size() > 0 && request.query.where[0][0] == 'teamId' && request.query.where[0][2] == getUserData().teamId && isStaff()) ||
                    (request.query.where.size() > 0 && request.query.where[0][0] == 'uid')
                  );

      match /wellnessScores/{scoreId} {
        allow read, write: if isOwner(userId);
      }
      
      match /fcmTokens/{tokenId} {
        allow read, list: if false; 
        allow write: if isOwner(userId);
      }

      match /trainings/{trainingId} {
        allow read, write: if isOwner(userId);
      }
      
      match /chats/{chatId} {
        allow read, write: if isOwner(userId);
        
        match /messages/{messageId} {
          allow read, write: if isOwner(userId);
        }
      }

      match /updates/{updateId} {
        allow read: if isOwner(userId);
        allow write: if false; 
      }
    }
    
    match /clubs/{clubId}/teams/{teamId}/alerts/{alertId} {
      allow create: if isOwner(request.resource.data.userId); // Player can create
      allow read, update, delete: if (isStaff() && getUserData().teamId == teamId) ||
                                     (isResponsible() && getUserData().clubId == clubId);
    }
    
    // Collection Group for Alerts
    match /{path=**}/alerts/{alertId} {
        // A user can list alerts if they are a staff or responsible, AND
        // the query is filtered on the 'clubId' field.
        // This is secure because the client will filter on *their own* clubId.
        allow list: if (isStaff() || isResponsible()) && 
                    'clubId' in request.query.where;
    }


    match /clubs/{clubId} {
      allow get, list: if isSignedIn(); 
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /clubUpdates/{updateId} {
        allow read: if isResponsible() && getUserData().clubId == clubId;
        allow write: if false;
      }

      match /teams/{teamId} {
        allow read: if isSignedIn() && getUserData().clubId == clubId;
        allow list, create, update, delete: if isResponsible() && getUserData().clubId == clubId;

        match /summaries/{summaryId} {
            allow read: if (isStaff() && getUserData().teamId == teamId) || (isResponsible() && getUserData().clubId == clubId);
            allow write: if false;
        }

        match /staffUpdates/{updateId} {
            allow read: if (isStaff() && getUserData().teamId == teamId) || (isResponsible() && getUserData().clubId == clubId);
            allow write: if false;
        }
      }
    }

    match /knowledge_base/{docId} {
      allow read, list: if isResponsible();
      allow write: if false; 
    }
  }
}
